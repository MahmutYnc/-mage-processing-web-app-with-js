<form action="/kitapver" method="POST" enctype="multipart/form-data">
    <div class="m-2">
        <input type="file" id="imageFile" accept="image/*" name="imageFile" onchange="readURL(this);">
        <img id="blah" src="#" alt="your image" />
        <br><br>
        <button type="submit" onclick="myFunction()" class="btn btn-danger">kaydet</button>

    </div>

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#blah')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(200);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
        
    </script>


</form>